@page "/settings"
@using SBInspector.Shared.Core.Domain
@using SBInspector.Shared.Application.Services
@using SBInspector.Shared.Core.Interfaces
@inject StorageConfigurationService ConfigService
@inject IStorageService StorageService
@inject ConnectionStringEncryptionService EncryptionService

<PageTitle>Settings - Service Bus Inspector</PageTitle>

<div class="container-fluid mt-4">
    <h1 class="mb-4">
        <i class="bi bi-gear"></i> Settings
    </h1>

    <div class="row">
        <div class="col-lg-8">
            <!-- Export Path Configuration -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-download"></i> Export Path
                    </h5>
                    
                    <div class="mb-3">
                        <label class="form-label">Exported Messages Location</label>
                        <div class="input-group">
                            <input type="text" class="form-control" @bind="exportPath" placeholder="@defaultExportPath" />
                            <button class="btn btn-outline-secondary" type="button" @onclick="ResetExportPath">
                                <i class="bi bi-arrow-counterclockwise"></i> Reset
                            </button>
                        </div>
                        <small class="form-text text-muted">
                            Path where exported messages will be saved. Leave empty to use default location.
                        </small>
                        @if (!string.IsNullOrWhiteSpace(exportPath))
                        {
                            <div class="mt-2">
                                <small class="text-info">
                                    <i class="bi bi-info-circle"></i> Current: @exportPath
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="mt-2">
                                <small class="text-info">
                                    <i class="bi bi-info-circle"></i> Default: @defaultExportPath
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Template Path Configuration -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-file-earmark-text"></i> Template Storage Path
                    </h5>
                    
                    <div class="mb-3">
                        <label class="form-label">Message Templates Location</label>
                        <div class="input-group">
                            <input type="text" class="form-control" @bind="templatePath" placeholder="@defaultTemplatePath" />
                            <button class="btn btn-outline-secondary" type="button" @onclick="ResetTemplatePath">
                                <i class="bi bi-arrow-counterclockwise"></i> Reset
                            </button>
                        </div>
                        <small class="form-text text-muted">
                            Path where message templates will be saved. Leave empty to use default location.
                        </small>
                        @if (!string.IsNullOrWhiteSpace(templatePath))
                        {
                            <div class="mt-2">
                                <small class="text-info">
                                    <i class="bi bi-info-circle"></i> Current: @templatePath
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="mt-2">
                                <small class="text-info">
                                    <i class="bi bi-info-circle"></i> Default: @defaultTemplatePath
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Connection Security -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-shield-lock"></i> Connection String Security
                    </h5>
                    
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        Connection strings are now stored securely using encryption.
                    </div>

                    @if (hasUnencryptedConnections)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle"></i>
                            You have @unencryptedConnectionCount connection(s) stored in plain text.
                            <button class="btn btn-sm btn-warning ms-2" @onclick="EncryptExistingConnections" disabled="@isEncrypting">
                                @if (isEncrypting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                    <text>Encrypting...</text>
                                }
                                else
                                {
                                    <text><i class="bi bi-shield-lock"></i> Encrypt Now</text>
                                }
                            </button>
                        </div>
                    }
                    else
                    {
                        <p class="text-success">
                            <i class="bi bi-check-circle"></i> All saved connections are encrypted.
                        </p>
                    }
                </div>
            </div>

            <!-- Save Button -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-4">
                <button class="btn btn-primary btn-lg" @onclick="SaveSettings" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    }
                    else
                    {
                        <i class="bi bi-save me-2"></i>
                    }
                    Save Settings
                </button>
            </div>
        </div>

        <!-- Info Panel -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle"></i> About Settings
                    </h5>
                    <p class="card-text">
                        Configure how SBInspector stores your data and where exported files are saved.
                    </p>
                    <hr />
                    <h6>Security</h6>
                    <p class="small">
                        Connection strings are encrypted using the Data Protection API, which uses machine-specific keys to secure your sensitive data.
                    </p>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 9999; min-width: 300px;" role="alert">
            <i class="bi bi-check-circle"></i> @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 9999; min-width: 300px;" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }
</div>

@code {
    private string exportPath = string.Empty;
    private string templatePath = string.Empty;
    private string defaultExportPath = string.Empty;
    private string defaultTemplatePath = string.Empty;
    private bool isSaving = false;
    private bool isEncrypting = false;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;
    private bool hasUnencryptedConnections = false;
    private int unencryptedConnectionCount = 0;

    protected override async Task OnInitializedAsync()
    {
        var config = ConfigService.GetConfiguration();
        exportPath = config.ExportPath;
        templatePath = config.TemplatePath;
        
        defaultExportPath = ConfigService.GetDefaultExportPath();
        defaultTemplatePath = ConfigService.GetDefaultTemplatePath();

        await CheckForUnencryptedConnections();
    }

    private async Task CheckForUnencryptedConnections()
    {
        try
        {
            var connections = await StorageService.GetSavedConnectionsAsync();
            unencryptedConnectionCount = connections.Count(c => !c.IsEncrypted);
            hasUnencryptedConnections = unencryptedConnectionCount > 0;
        }
        catch (Exception ex)
        {
            // Log or show error if storage is inaccessible
            errorMessage = $"Could not check connection security status: {ex.Message}";
            hasUnencryptedConnections = false;
        }
    }

    private void ResetExportPath()
    {
        exportPath = string.Empty;
    }

    private void ResetTemplatePath()
    {
        templatePath = string.Empty;
    }

    private async Task SaveSettings()
    {
        isSaving = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            await ConfigService.SetExportPathAsync(exportPath);
            await ConfigService.SetTemplatePathAsync(templatePath);

            successMessage = "Settings saved successfully!";
            
            await Task.Delay(3000);
            successMessage = string.Empty;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving settings: {ex.Message}";
            await Task.Delay(5000);
            errorMessage = string.Empty;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task EncryptExistingConnections()
    {
        isEncrypting = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            var connections = await StorageService.GetSavedConnectionsAsync();
            var unencrypted = connections.Where(c => !c.IsEncrypted).ToList();

            foreach (var connection in unencrypted)
            {
                connection.ConnectionString = EncryptionService.Encrypt(connection.ConnectionString);
                connection.IsEncrypted = true;
                await StorageService.SaveConnectionAsync(connection);
            }

            await CheckForUnencryptedConnections();
            successMessage = $"Successfully encrypted {unencrypted.Count} connection(s)!";
            
            await Task.Delay(3000);
            successMessage = string.Empty;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error encrypting connections: {ex.Message}";
            await Task.Delay(5000);
            errorMessage = string.Empty;
        }
        finally
        {
            isEncrypting = false;
        }
    }
}
