@using SBInspector.Shared.Core.Domain
@using SBInspector.Shared.Application.Services
@inject ThemeService ThemeService

<div class="top-row ps-3 navbar navbar-dark @(isCollapsed ? "collapsed" : "")" style="@GetTopRowStyle()">
    <div class="container-fluid">
        @if (!isCollapsed)
        {
            <a class="navbar-brand" href="">SEBInspector</a>
        }
        <button class="btn-collapse" @onclick="ToggleCollapse" title="@(isCollapsed ? "Expand menu" : "Collapse menu")">
            <span class="bi @(isCollapsed ? "bi-chevron-right" : "bi-chevron-left")"></span>
        </button>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable @(isCollapsed ? "collapsed" : "")" onclick="document.querySelector('.navbar-toggler').click()" style="@GetNavScrollableStyle()">
    @* Connection Tree View *@
    @if (ShowConnectionTree)
    {
        <div class="px-3 pt-3 pb-2 border-bottom border-secondary">
            <ConnectionTreeView 
                OnConnect="@OnConnectionSelected"
                OnDisconnect="@OnDisconnectRequested"
                @ref="connectionTreeViewRef" />
        </div>
    }
    
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" title="Service Bus Inspector">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> 
                @if (!isCollapsed)
                {
                    <span>Service Bus Inspector</span>
                }
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="templates" title="Message Templates">
                <span class="bi bi-file-earmark-text-nav-menu" aria-hidden="true"></span> 
                @if (!isCollapsed)
                {
                    <span>Message Templates</span>
                }
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="theme-customization" title="Theme Customization">
                <span class="bi bi-palette-nav-menu" aria-hidden="true"></span> 
                @if (!isCollapsed)
                {
                    <span>Theme Customization</span>
                }
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings" title="Settings">
                <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> 
                @if (!isCollapsed)
                {
                    <span>Settings</span>
                }
            </NavLink>
        </div>
        @if (!isCollapsed)
        {
            <div class="mt-auto px-3 pb-3">            
                <img src="images/appicon.svg" alt="SEBInspector Logo" class="nav-logo" />
            </div>
        }
    </nav>

</div>

@code {
    [Parameter]
    public bool ShowConnectionTree { get; set; } = true;

    [Parameter]
    public EventCallback<SavedConnection> OnConnectionSelected { get; set; }

    [Parameter]
    public EventCallback OnDisconnectRequested { get; set; }

    private ConnectionTreeView? connectionTreeViewRef;
    private bool isCollapsed = false;

    private void ToggleCollapse()
    {
        isCollapsed = !isCollapsed;
    }

    public async Task RefreshConnectionsAsync()
    {
        if (connectionTreeViewRef != null)
        {
            await connectionTreeViewRef.RefreshConnectionsAsync();
        }
    }

    private string GetTopRowStyle()
    {
        var theme = ThemeService.GetCurrentTheme();
        var isDark = ThemeService.IsDarkMode();
        
        string backgroundColor;
        string textColor;
        
        if (isDark && theme.PaletteDark != null)
        {
            backgroundColor = theme.PaletteDark.DrawerBackground?.ToString() ?? "#252526";
            textColor = theme.PaletteDark.DrawerText?.ToString() ?? "#ffffff";
        }
        else if (theme.PaletteLight != null)
        {
            backgroundColor = theme.PaletteLight.DrawerBackground?.ToString() ?? "#f8f9fa";
            textColor = theme.PaletteLight.DrawerText?.ToString() ?? "#212529";
        }
        else
        {
            backgroundColor = "#252526";
            textColor = "#ffffff";
        }
        
        return $"background-color: {backgroundColor}; color: {textColor};";
    }

    private string GetNavScrollableStyle()
    {
        var theme = ThemeService.GetCurrentTheme();
        var isDark = ThemeService.IsDarkMode();
        
        string backgroundColor;
        string textColor;
        
        if (isDark && theme.PaletteDark != null)
        {
            backgroundColor = theme.PaletteDark.DrawerBackground?.ToString() ?? "#252526";
            textColor = theme.PaletteDark.DrawerText?.ToString() ?? "#ffffff";
        }
        else if (theme.PaletteLight != null)
        {
            backgroundColor = theme.PaletteLight.DrawerBackground?.ToString() ?? "#f8f9fa";
            textColor = theme.PaletteLight.DrawerText?.ToString() ?? "#212529";
        }
        else
        {
            backgroundColor = "#252526";
            textColor = "#ffffff";
        }
        
        return $"background-color: {backgroundColor}; color: {textColor};";
    }
}

