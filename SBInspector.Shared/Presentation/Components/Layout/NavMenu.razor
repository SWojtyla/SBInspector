@using SBInspector.Shared.Core.Domain

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SEBInspector</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    @* Connection Tree View *@
    @if (ShowConnectionTree)
    {
        <div class="px-3 pt-3 pb-2 border-bottom border-secondary">
            <ConnectionTreeView 
                OnConnect="@OnConnectionSelected"
                OnDisconnect="@OnDisconnectRequested"
                @ref="connectionTreeViewRef" />
        </div>
    }
    
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Service Bus Inspector
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="templates">
                <span class="bi bi-file-earmark-text-nav-menu" aria-hidden="true"></span> Message Templates
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="theme-customization">
                <span class="bi bi-palette-nav-menu" aria-hidden="true"></span> Theme Customization
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> Settings
            </NavLink>
        </div>
        <div class="mt-auto px-3 pb-3">            
            <img src="images/appicon.svg" alt="SEBInspector Logo" class="nav-logo" />
        </div>
    </nav>

</div>

@code {
    [Parameter]
    public bool ShowConnectionTree { get; set; } = true;

    [Parameter]
    public EventCallback<SavedConnection> OnConnectionSelected { get; set; }

    [Parameter]
    public EventCallback OnDisconnectRequested { get; set; }

    private ConnectionTreeView? connectionTreeViewRef;

    public async Task RefreshConnectionsAsync()
    {
        if (connectionTreeViewRef != null)
        {
            await connectionTreeViewRef.RefreshConnectionsAsync();
        }
    }
}

