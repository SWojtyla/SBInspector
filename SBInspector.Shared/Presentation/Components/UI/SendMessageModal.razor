@using SBInspector.Shared.Core.Interfaces
@using SBInspector.Shared.Core.Domain
@using MudBlazor
@inject IStorageService StorageService

<MudDialog @bind-Visible="@isDialogVisible" Options="@(new DialogOptions { MaxWidth = MaxWidth.Large, FullWidth = true, CloseButton = false })">
        <MudDialogTitle>
            <MudIcon Icon="@Icons.Material.Filled.Send" /> @Title
        </MudDialogTitle>
        <MudDialogContent>
            @if (!IsReschedule && messageTemplates.Any())
            {
                <MudText Typo="Typo.subtitle2">Message Templates</MudText>
                <MudStack Direction="Row" Spacing="1" AlignItems="AlignItems.Center">
                    <MudSelect T="string" @bind-Value="selectedTemplateId" Label="Select a template" Dense="true" Margin="Margin.Dense">
                        <MudSelectItem Value="string.Empty">-- Select a template --</MudSelectItem>
                        @foreach (var template in messageTemplates)
                        {
                            <MudSelectItem Value="@template.Id">@template.Name @(template.LastUsedAt.HasValue ? $"(last used: {template.LastUsedAt.Value.ToLocalTime():g})" : "")</MudSelectItem>
                        }
                    </MudSelect>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="LoadSelectedTemplate" Disabled="@string.IsNullOrEmpty(selectedTemplateId)" StartIcon="@Icons.Material.Filled.Download">Load</MudButton>
                    <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="DeleteSelectedTemplate" Disabled="@string.IsNullOrEmpty(selectedTemplateId)" StartIcon="@Icons.Material.Filled.Delete">Delete</MudButton>
                </MudStack>
            }
            <MudTextField @bind-Value="messageBody" Label="Message Body *" Required="true" Margin="Margin.Normal" Lines="6" />
            <MudGrid>
                <MudItem xs="6">
                    <MudTextField @bind-Value="subject" Label="Subject" Margin="Margin.Normal" />
                </MudItem>
                <MudItem xs="6">
                    <MudTextField @bind-Value="contentType" Label="Content Type" Margin="Margin.Normal" Placeholder="e.g., application/json" />
                </MudItem>
            </MudGrid>
            @if (IsReschedule)
            {
                <MudTextField @bind-Value="scheduledTime" Label="Scheduled Enqueue Time *" Margin="Margin.Normal" InputType="InputType.DateTimeLocal" />
            }
            else
            {
                <MudCheckBox T="bool" @bind-Value="isScheduled" Label="Schedule message for later delivery" Disabled="@sendToDeadLetter" />
                @if (isScheduled)
                {
                    <MudTextField @bind-Value="scheduledTime" Label="Scheduled Enqueue Time *" Margin="Margin.Normal" InputType="InputType.DateTimeLocal" />
                }
                <MudCheckBox T="bool" @bind-Value="sendToDeadLetter" Label="Send directly to dead-letter queue" />
            }
            <MudText Typo="Typo.subtitle2">Application Properties</MudText>
            <MudText Typo="Typo.caption" Color="Color.Secondary">Add key-value pairs (one per line, format: key=value)</MudText>
            <MudTextField @bind-Value="propertiesText" Label="Application Properties" Margin="Margin.Normal" Lines="4" />
            @if (!IsReschedule)
            {
                <MudCheckBox T="bool" @bind-Value="shouldSaveTemplate" Label="Save as template for later use" />
                @if (shouldSaveTemplate)
                {
                    <MudTextField @bind-Value="templateName" Label="Template Name" Margin="Margin.Normal" />
                }
            }
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <MudAlert Severity="Severity.Error" Dense="true"><MudIcon Icon="@Icons.Material.Filled.Error" /> @errorMessage</MudAlert>
            }
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <MudAlert Severity="Severity.Success" Dense="true" CloseIconClicked="@(() => successMessage = string.Empty)"><MudIcon Icon="@Icons.Material.Filled.CheckCircle" /> @successMessage</MudAlert>
            }
        </MudDialogContent>
        <MudDialogActions>
            <MudButton Variant="Variant.Text" Color="Color.Secondary" OnClick="HandleClose" StartIcon="@Icons.Material.Filled.Close">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="HandleSend" Disabled="@isSending" StartIcon="@Icons.Material.Filled.Send">
                @if (isSending)
                {
                    <MudProgressCircular Indeterminate="true" Size="Size.Small" Class="mr-2" />
                    <span>Sending...</span>
                }
                else
                {
                    <span>@(IsReschedule ? "Reschedule" : "Send")</span>
                }
            </MudButton>
        </MudDialogActions>
    </MudDialog>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string Title { get; set; } = "Send Message";

    [Parameter]
    public bool IsReschedule { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback<MessageData> OnSend { get; set; }

    [Parameter]
    public MessageInfo? ExistingMessage { get; set; }

    private bool isDialogVisible = false;
    private string messageBody = string.Empty;
    private string subject = string.Empty;
    private string contentType = "text/plain";
    private string propertiesText = string.Empty;
    private bool isScheduled = false;
    private bool sendToDeadLetter = false;
    private DateTime scheduledTime = DateTime.Now.AddHours(1);
    private string errorMessage = string.Empty;
    private bool isSending = false;

    private List<MessageTemplate> messageTemplates = new();
    private string selectedTemplateId = string.Empty;
    private bool shouldSaveTemplate = false;
    private string templateName = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        // Sync the internal dialog visibility with the parameter
        isDialogVisible = IsVisible;
        
        if (IsReschedule)
        {
            isScheduled = true;
        }

        // Load templates when modal becomes visible
        if (IsVisible && !IsReschedule)
        {
            await LoadMessageTemplatesAsync();
        }

        // Pre-populate from existing message if provided
        if (IsVisible && ExistingMessage != null && string.IsNullOrEmpty(messageBody))
        {
            messageBody = ExistingMessage.Body;
            subject = ExistingMessage.Subject ?? string.Empty;
            contentType = ExistingMessage.ContentType ?? "text/plain";
            
            if (ExistingMessage.Properties?.Any() == true)
            {
                propertiesText = string.Join("\n", 
                    ExistingMessage.Properties.Select(kvp => $"{kvp.Key}={kvp.Value}"));
            }
        }
    }

    private async Task LoadMessageTemplatesAsync()
    {
        messageTemplates = await StorageService.GetMessageTemplatesAsync();
    }

    private async Task LoadSelectedTemplate()
    {
        var template = messageTemplates.FirstOrDefault(t => t.Id == selectedTemplateId);
        if (template != null)
        {
            messageBody = template.MessageBody;
            subject = template.Subject ?? string.Empty;
            contentType = template.ContentType ?? "text/plain";
            
            if (template.Properties?.Any() == true)
            {
                propertiesText = string.Join("\n", 
                    template.Properties.Select(kvp => $"{kvp.Key}={kvp.Value}"));
            }

            templateName = template.Name;
            await StorageService.UpdateTemplateLastUsedAsync(template.Id);
            await LoadMessageTemplatesAsync();
            successMessage = $"Loaded template '{template.Name}'";
        }
    }

    private async Task DeleteSelectedTemplate()
    {
        if (!string.IsNullOrEmpty(selectedTemplateId))
        {
            await StorageService.DeleteMessageTemplateAsync(selectedTemplateId);
            await LoadMessageTemplatesAsync();
            selectedTemplateId = string.Empty;
            successMessage = "Template deleted successfully";
        }
    }

    private async Task HandleClose()
    {
        ResetForm();
        isDialogVisible = false;
        await OnClose.InvokeAsync();
    }

    private async Task HandleSend()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        // Validate
        if (string.IsNullOrWhiteSpace(messageBody))
        {
            errorMessage = "Message body is required.";
            return;
        }

        if ((isScheduled || IsReschedule) && scheduledTime <= DateTime.Now)
        {
            errorMessage = "Scheduled time must be in the future.";
            return;
        }

        if (sendToDeadLetter && isScheduled)
        {
            errorMessage = "Cannot schedule messages when sending to dead-letter queue.";
            return;
        }

        isSending = true;

        try
        {
            // Parse properties
            var properties = new Dictionary<string, object>();
            if (!string.IsNullOrWhiteSpace(propertiesText))
            {
                var lines = propertiesText.Split('\n', StringSplitOptions.RemoveEmptyEntries);
                foreach (var line in lines)
                {
                    var parts = line.Split('=', 2);
                    if (parts.Length == 2)
                    {
                        properties[parts[0].Trim()] = parts[1].Trim();
                    }
                }
            }

            // Save as template if requested
            if (!IsReschedule && shouldSaveTemplate && !string.IsNullOrWhiteSpace(templateName))
            {
                var template = new MessageTemplate
                {
                    Name = templateName.Trim(),
                    MessageBody = messageBody,
                    Subject = subject,
                    ContentType = contentType,
                    Properties = properties.Count > 0 ? properties : null
                };
                await StorageService.SaveMessageTemplateAsync(template);
                await LoadMessageTemplatesAsync();
            }

            var data = new MessageData
            {
                Body = messageBody,
                Subject = subject,
                ContentType = contentType,
                Properties = properties,
                ScheduledTime = (isScheduled || IsReschedule) ? scheduledTime : null,
                SendToDeadLetter = sendToDeadLetter
            };

            await OnSend.InvokeAsync(data);
            ResetForm();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSending = false;
        }
    }

    private void ResetForm()
    {
        messageBody = string.Empty;
        subject = string.Empty;
        contentType = "text/plain";
        propertiesText = string.Empty;
        isScheduled = false;
        sendToDeadLetter = false;
        scheduledTime = DateTime.Now.AddHours(1);
        errorMessage = string.Empty;
        successMessage = string.Empty;
        isSending = false;
        shouldSaveTemplate = false;
        templateName = string.Empty;
        selectedTemplateId = string.Empty;
    }

    public class MessageData
    {
        public string Body { get; set; } = string.Empty;
        public string Subject { get; set; } = string.Empty;
        public string ContentType { get; set; } = string.Empty;
        public Dictionary<string, object> Properties { get; set; } = new();
        public DateTime? ScheduledTime { get; set; }
        public bool SendToDeadLetter { get; set; }
    }
}
