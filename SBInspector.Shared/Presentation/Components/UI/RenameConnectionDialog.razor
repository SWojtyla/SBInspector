@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="newName" Label="New connection name" Variant="Variant.Outlined" Immediate="true" 
                      Error="@(!string.IsNullOrWhiteSpace(errorMessage))" ErrorText="@errorMessage" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" Color="Color.Secondary" OnClick="Cancel" StartIcon="@Icons.Material.Filled.Close">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit" Disabled="@(!IsValid())" StartIcon="@Icons.Material.Filled.Check">Rename</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string CurrentName { get; set; } = string.Empty;

    [Parameter]
    public List<string> ExistingNames { get; set; } = new();

    private string newName = string.Empty;
    private string errorMessage = string.Empty;

    protected override void OnInitialized()
    {
        newName = CurrentName;
    }

    private bool IsValid()
    {
        errorMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(newName))
        {
            errorMessage = "Name cannot be empty";
            return false;
        }

        if (newName.Equals(CurrentName, StringComparison.OrdinalIgnoreCase))
        {
            errorMessage = "New name must be different";
            return false;
        }

        if (ExistingNames.Any(n => n.Equals(newName, StringComparison.OrdinalIgnoreCase) && !n.Equals(CurrentName, StringComparison.OrdinalIgnoreCase)))
        {
            errorMessage = "A connection with this name already exists";
            return false;
        }

        return true;
    }

    private void Submit()
    {
        if (IsValid())
        {
            MudDialog.Close(DialogResult.Ok(newName.Trim()));
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
