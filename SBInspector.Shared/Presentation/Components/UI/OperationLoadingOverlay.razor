@using MudBlazor

@if (IsVisible)
{
    <MudOverlay Visible="true" ZIndex="1300">
        <MudPaper Class="mud-elevation-24 d-flex flex-column align-items-center justify-content-center"
            Style="min-width:300px;min-height:180px;max-width:90vw;max-height:90vh;">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Class="mb-2" />
            <MudText Typo="Typo.h5">@Title</MudText>
            @if (!string.IsNullOrEmpty(Message))
            {
                <MudText Typo="Typo.body2">@Message</MudText>
            }
        </MudPaper>
    </MudOverlay>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string Title { get; set; } = "Processing...";

    [Parameter]
    public string Message { get; set; } = string.Empty;
}
