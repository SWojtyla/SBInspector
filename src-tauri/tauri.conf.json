{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SBInspector",
  "version": "0.1.0",
  "identifier": "SBInspector",
  "build": {
    "frontendDist": "../SBInspector/bin/Release/net9.0/publish/wwwroot",
    "devUrl": "https://localhost:5000",
    "beforeDevCommand": "dotnet watch run --project SBInspector",
    "beforeBuildCommand": "dotnet publish SBInspector/SBInspector.csproj -c Release"   
  },
  "app": {
    "windows": [
      {
        "title": "SB-Inspector",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval'; img-src 'self' data:; font-src 'self' https://cdn.jsdelivr.net"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
