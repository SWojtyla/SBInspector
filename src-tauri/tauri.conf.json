{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SBInspector",
  "version": "0.1.0",
  "identifier": "SBInspector",
  "build": {
    "frontendDist": "../dist/wwwroot",
    "devUrl": "https://localhost:5000",
    "beforeDevCommand": "dotnet watch run --project SBInspector",
    "beforeBuildCommand": "dotnet publish -c release SBInspector/SBInspector.csproj -o dist"   
  },
  "app": {
    "windows": [
      {
        "title": "SB-Inspector",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
