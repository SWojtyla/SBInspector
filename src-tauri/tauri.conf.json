{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SBInspector",
  "version": "0.1.0",
  "identifier": "SBInspector",
  "build": {
    "devUrl": "http://localhost:5000",
    "beforeDevCommand": "dotnet watch run --project SBInspector --no-launch-profile",
    "beforeBuildCommand": "dotnet publish -c Release SBInspector/SBInspector.csproj -o dist -r win-x64 --self-contained true"   
  },
  "app": {
    "windows": [
      {
        "title": "SB-Inspector",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "about:blank"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../dist": "dist"
    }
  }
}
