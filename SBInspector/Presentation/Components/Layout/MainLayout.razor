@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-3">SBInspector</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/" title="Home" />
        <MudIconButton Icon="@(_isDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)" 
                       Color="Color.Inherit" 
                       OnClick="@ToggleDarkMode" 
                       title="@(_isDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDarkMode = true;

    private readonly MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#1b6ec2",
            Secondary = "#006bb7",
            AppbarBackground = "#1b6ec2",
            Background = "#ffffff",
            Surface = "#ffffff",
            DrawerBackground = "#ffffff",
            TextPrimary = "#212529",
            TextSecondary = "#6c757d",
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#3a8bd8",
            Secondary = "#2d9cdb",
            AppbarBackground = "#1e1e1e",
            Background = "#1e1e1e",
            Surface = "#252525",
            DrawerBackground = "#1e1e1e",
            TextPrimary = "#ffffff",
            TextSecondary = "#b0b0b0",
        }
    };

    private void ToggleDrawer()
    {
        // No drawer to toggle anymore, but keeping the button for potential future use
    }

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }
}
