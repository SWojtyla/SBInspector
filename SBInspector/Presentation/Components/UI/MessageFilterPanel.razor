@using SBInspector.Core.Domain
@using DomainFilterOperator = SBInspector.Core.Domain.FilterOperator

<MudPaper Class="pa-4 mb-3" Elevation="2">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-3">
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
            <MudIcon Icon="@Icons.Material.Filled.FilterList" />
            <MudText Typo="Typo.h6">Filter Messages</MudText>
        </MudStack>
        @if (Filters.Any(f => !string.IsNullOrWhiteSpace(f.AttributeName) || !string.IsNullOrWhiteSpace(f.AttributeValue)))
        {
            <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="ClearAllFilters" StartIcon="@Icons.Material.Filled.Clear">
                Clear All
            </MudButton>
        }
    </MudStack>
    
    @for (int i = 0; i < Filters.Count; i++)
    {
        var index = i;
        var filter = Filters[index];
        <MudCard Class="mb-2" Elevation="1">
            <MudCardContent>
                <MudGrid Spacing="2">
                    <MudItem xs="12" md="3">
                        <MudSelect T="FilterField" Value="filter.Field" 
                                   Label="Filter Field" 
                                   Variant="Variant.Outlined" 
                                   Margin="Margin.Dense"
                                   ValueChanged="@(async (FilterField val) => { filter.Field = val; await NotifyFiltersChanged(); })">
                            <MudSelectItem T="FilterField" Value="@FilterField.ApplicationProperty">Application Property</MudSelectItem>
                            <MudSelectItem T="FilterField" Value="@FilterField.EnqueuedTime">Enqueued Time</MudSelectItem>
                            <MudSelectItem T="FilterField" Value="@FilterField.DeliveryCount">Delivery Count</MudSelectItem>
                            <MudSelectItem T="FilterField" Value="@FilterField.SequenceNumber">Sequence Number</MudSelectItem>
                        </MudSelect>
                    </MudItem>
                    
                    @if (filter.Field == FilterField.ApplicationProperty)
                    {
                        <MudItem xs="12" md="3">
                            <MudTextField T="string" Value="filter.AttributeName" 
                                          Label="Attribute Name" 
                                          Variant="Variant.Outlined" 
                                          Margin="Margin.Dense"
                                          Placeholder="e.g., customerId, orderId"
                                          ValueChanged="@(async (string val) => { filter.AttributeName = val; await NotifyFiltersChanged(); })" />
                        </MudItem>
                    }
                    
                    <MudItem xs="12" md="@(filter.Field == FilterField.ApplicationProperty ? 2 : 3)">
                        <MudSelect T="DomainFilterOperator" Value="filter.Operator" 
                                   Label="Operator" 
                                   Variant="Variant.Outlined" 
                                   Margin="Margin.Dense"
                                   ValueChanged="@(async (DomainFilterOperator val) => { filter.Operator = val; await NotifyFiltersChanged(); })">
                            @foreach (var op in GetAvailableOperators(filter.Field))
                            {
                                <MudSelectItem T="DomainFilterOperator" Value="@op">@GetOperatorDisplayName(op)</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                    
                    <MudItem xs="12" md="@(filter.Field == FilterField.ApplicationProperty ? 3 : 4)">
                        <MudTextField T="string" Value="filter.AttributeValue" 
                                      Label="Value" 
                                      Variant="Variant.Outlined" 
                                      Margin="Margin.Dense"
                                      InputType="@GetMudInputType(filter.Field)"
                                      Placeholder="@GetPlaceholder(filter.Field, filter.Operator)"
                                      ValueChanged="@(async (string val) => { filter.AttributeValue = val; await NotifyFiltersChanged(); })" />
                    </MudItem>
                    
                    <MudItem xs="12" md="1" Class="d-flex align-end">
                        @if (Filters.Count > 1)
                        {
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                                           Color="Color.Error" 
                                           Variant="Variant.Outlined" 
                                           OnClick="() => RemoveFilterAtIndex(index)" />
                        }
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    }
    
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mt-3">
        <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="AddNewFilter" StartIcon="@Icons.Material.Filled.Add">
            Add Filter
        </MudButton>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
            <MudIcon Icon="@Icons.Material.Filled.Info" Size="Size.Small" />
            <MudText Typo="Typo.body2" Color="Color.Default">
                Showing <strong>@FilteredCount</strong> of <strong>@TotalCount</strong> messages
            </MudText>
        </MudStack>
    </MudStack>
</MudPaper>

@code {
    [Parameter]
    public List<MessageFilter> Filters { get; set; } = new();

    [Parameter]
    public EventCallback<List<MessageFilter>> FiltersChanged { get; set; }

    [Parameter]
    public int FilteredCount { get; set; }

    [Parameter]
    public int TotalCount { get; set; }

    private async Task NotifyFiltersChanged()
    {
        await FiltersChanged.InvokeAsync(Filters);
    }

    private async Task AddNewFilter()
    {
        Filters.Add(new MessageFilter());
        await FiltersChanged.InvokeAsync(Filters);
    }

    private async Task RemoveFilterAtIndex(int index)
    {
        if (Filters.Count > 1)
        {
            Filters.RemoveAt(index);
            await FiltersChanged.InvokeAsync(Filters);
        }
    }

    private async Task ClearAllFilters()
    {
        Filters.Clear();
        Filters.Add(new MessageFilter());
        await FiltersChanged.InvokeAsync(Filters);
    }

    private List<DomainFilterOperator> GetAvailableOperators(FilterField field)
    {
        return field switch
        {
            FilterField.ApplicationProperty => new List<DomainFilterOperator>
            {
                DomainFilterOperator.Contains,
                DomainFilterOperator.Equals,
                DomainFilterOperator.NotEquals,
                DomainFilterOperator.Regex,
                DomainFilterOperator.GreaterThan,
                DomainFilterOperator.LessThan,
                DomainFilterOperator.GreaterThanOrEqual,
                DomainFilterOperator.LessThanOrEqual
            },
            FilterField.EnqueuedTime => new List<DomainFilterOperator>
            {
                DomainFilterOperator.Equals,
                DomainFilterOperator.NotEquals,
                DomainFilterOperator.GreaterThan,
                DomainFilterOperator.LessThan,
                DomainFilterOperator.GreaterThanOrEqual,
                DomainFilterOperator.LessThanOrEqual
            },
            FilterField.DeliveryCount or FilterField.SequenceNumber => new List<DomainFilterOperator>
            {
                DomainFilterOperator.Equals,
                DomainFilterOperator.NotEquals,
                DomainFilterOperator.GreaterThan,
                DomainFilterOperator.LessThan,
                DomainFilterOperator.GreaterThanOrEqual,
                DomainFilterOperator.LessThanOrEqual
            },
            _ => new List<DomainFilterOperator> { DomainFilterOperator.Contains }
        };
    }

    private string GetOperatorDisplayName(DomainFilterOperator op)
    {
        return op switch
        {
            DomainFilterOperator.Contains => "Contains",
            DomainFilterOperator.Equals => "Equals",
            DomainFilterOperator.NotEquals => "Not Equals",
            DomainFilterOperator.GreaterThan => "Greater Than",
            DomainFilterOperator.LessThan => "Less Than",
            DomainFilterOperator.GreaterThanOrEqual => "Greater Than or Equal",
            DomainFilterOperator.LessThanOrEqual => "Less Than or Equal",
            DomainFilterOperator.Regex => "Regex",
            _ => op.ToString()
        };
    }

    private string GetInputType(FilterField field)
    {
        return field switch
        {
            FilterField.EnqueuedTime => "datetime-local",
            FilterField.DeliveryCount or FilterField.SequenceNumber => "number",
            _ => "text"
        };
    }

    private InputType GetMudInputType(FilterField field)
    {
        return field switch
        {
            FilterField.EnqueuedTime => InputType.DateTimeLocal,
            FilterField.DeliveryCount or FilterField.SequenceNumber => InputType.Number,
            _ => InputType.Text
        };
    }

    private string GetPlaceholder(FilterField field, DomainFilterOperator op)
    {
        return field switch
        {
            FilterField.EnqueuedTime => "Select date and time",
            FilterField.DeliveryCount => "e.g., 5",
            FilterField.SequenceNumber => "e.g., 12345",
            FilterField.ApplicationProperty when op == DomainFilterOperator.Regex => "e.g., ^ABC.*",
            FilterField.ApplicationProperty => "e.g., 12345, ABC",
            _ => ""
        };
    }
}
