@if (IsVisible)
{
    <MudOverlay Visible="true" DarkBackground="true" Absolute="false">
        <MudPaper Class="pa-8 d-flex flex-column align-center" Elevation="10">
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
            <MudText Typo="Typo.h5" Class="mt-4">@Title</MudText>
            @if (!string.IsNullOrEmpty(Message))
            {
                <MudText Typo="Typo.body1" Class="mt-2">@Message</MudText>
            }
        </MudPaper>
    </MudOverlay>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string Title { get; set; } = "Processing...";

    [Parameter]
    public string Message { get; set; } = string.Empty;
}
