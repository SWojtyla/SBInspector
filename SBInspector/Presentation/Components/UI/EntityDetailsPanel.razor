@using SBInspector.Core.Domain

<MudPaper Class="pa-4" Elevation="2">
    @if (EntityType == "queue" && QueueInfo != null)
    {
        <div class="d-flex justify-space-between align-center mb-4">
            <div class="d-flex align-center gap-2">
                <MudIcon Icon="@Icons.Material.Filled.Inbox" />
                <MudText Typo="Typo.h5">@QueueInfo.Name</MudText>
                <MudChip T="string" Color="@(QueueInfo.Status == "Active" ? Color.Success : Color.Default)" Size="Size.Small">
                    @QueueInfo.Status
                </MudChip>
            </div>
            <MudButton Variant="Variant.Filled" 
                       Color="@(QueueInfo.Status == "Active" ? Color.Secondary : Color.Success)" 
                       Size="Size.Small"
                       OnClick="() => OnToggleStatus.InvokeAsync()"
                       StartIcon="@(QueueInfo.Status == "Active" ? Icons.Material.Filled.Pause : Icons.Material.Filled.PlayArrow)">
                @(QueueInfo.Status == "Active" ? "Disable" : "Enable")
            </MudButton>
        </div>

        <MudText Typo="Typo.h6" Class="mb-3">Message Counts</MudText>
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudCard Outlined="true" Style="cursor: pointer;" @onclick="@(() => OnViewMessages.InvokeAsync("Active"))">
                    <MudCardContent>
                        <div class="d-flex align-center justify-space-between">
                            <div>
                                <MudIcon Icon="@Icons.Material.Filled.Inbox" Color="Color.Primary" Size="Size.Large" />
                                <MudText Typo="Typo.subtitle2" Class="mt-2">Active Messages</MudText>
                                <MudText Typo="Typo.h4">@QueueInfo.ActiveMessageCount</MudText>
                            </div>
                            @if (QueueInfo.ActiveMessageCount > 0)
                            {
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small">View</MudButton>
                            }
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudCard Outlined="true" Style="cursor: pointer;" @onclick="@(() => OnViewMessages.InvokeAsync("Scheduled"))">
                    <MudCardContent>
                        <div class="d-flex align-center justify-space-between">
                            <div>
                                <MudIcon Icon="@Icons.Material.Filled.Schedule" Color="Color.Warning" Size="Size.Large" />
                                <MudText Typo="Typo.subtitle2" Class="mt-2">Scheduled Messages</MudText>
                                <MudText Typo="Typo.h4">@QueueInfo.ScheduledMessageCount</MudText>
                            </div>
                            @if (QueueInfo.ScheduledMessageCount > 0)
                            {
                                <MudButton Variant="Variant.Filled" Color="Color.Warning" Size="Size.Small">View</MudButton>
                            }
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="4">
                <MudCard Outlined="true" Style="cursor: pointer;" @onclick="@(() => OnViewMessages.InvokeAsync("DeadLetter"))">
                    <MudCardContent>
                        <div class="d-flex align-center justify-space-between">
                            <div>
                                <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Error" Size="Size.Large" />
                                <MudText Typo="Typo.subtitle2" Class="mt-2">Dead Letter Messages</MudText>
                                <MudText Typo="Typo.h4">@QueueInfo.DeadLetterMessageCount</MudText>
                            </div>
                            @if (QueueInfo.DeadLetterMessageCount > 0)
                            {
                                <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small">View</MudButton>
                            }
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    }
    else if (EntityType == "topic" && TopicInfo != null)
    {
        <div class="d-flex justify-space-between align-center mb-4">
            <div class="d-flex align-center gap-2">
                <MudIcon Icon="@Icons.Material.Filled.Podcasts" />
                <MudText Typo="Typo.h5">@TopicInfo.Name</MudText>
                <MudChip T="string" Color="@(TopicInfo.Status == "Active" ? Color.Success : Color.Default)" Size="Size.Small">
                    @TopicInfo.Status
                </MudChip>
            </div>
            <MudButton Variant="Variant.Filled" 
                       Color="@(TopicInfo.Status == "Active" ? Color.Secondary : Color.Success)" 
                       Size="Size.Small"
                       OnClick="() => OnToggleStatus.InvokeAsync()"
                       StartIcon="@(TopicInfo.Status == "Active" ? Icons.Material.Filled.Pause : Icons.Material.Filled.PlayArrow)">
                @(TopicInfo.Status == "Active" ? "Disable" : "Enable")
            </MudButton>
        </div>

        <MudAlert Severity="Severity.Info">
            Select a subscription from the tree to view its messages.
        </MudAlert>
    }
    else if (EntityType == "subscription" && SubscriptionInfo != null)
    {
        <div class="d-flex justify-space-between align-center mb-4">
            <div class="d-flex align-center gap-2">
                <MudIcon Icon="@Icons.Material.Filled.Email" />
                <MudText Typo="Typo.h5">@TopicName / @SubscriptionInfo.Name</MudText>
                <MudChip T="string" Color="@(SubscriptionInfo.Status == "Active" ? Color.Success : Color.Default)" Size="Size.Small">
                    @SubscriptionInfo.Status
                </MudChip>
            </div>
            <MudButton Variant="Variant.Filled" 
                       Color="@(SubscriptionInfo.Status == "Active" ? Color.Secondary : Color.Success)" 
                       Size="Size.Small"
                       OnClick="() => OnToggleStatus.InvokeAsync()"
                       StartIcon="@(SubscriptionInfo.Status == "Active" ? Icons.Material.Filled.Pause : Icons.Material.Filled.PlayArrow)">
                @(SubscriptionInfo.Status == "Active" ? "Disable" : "Enable")
            </MudButton>
        </div>

        <MudText Typo="Typo.h6" Class="mb-3">Message Counts</MudText>
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudCard Outlined="true" Style="cursor: pointer;" @onclick="@(() => OnViewMessages.InvokeAsync("Active"))">
                    <MudCardContent>
                        <div class="d-flex align-center justify-space-between">
                            <div>
                                <MudIcon Icon="@Icons.Material.Filled.Inbox" Color="Color.Primary" Size="Size.Large" />
                                <MudText Typo="Typo.subtitle2" Class="mt-2">Active Messages</MudText>
                                <MudText Typo="Typo.h4">@SubscriptionInfo.ActiveMessageCount</MudText>
                            </div>
                            @if (SubscriptionInfo.ActiveMessageCount > 0)
                            {
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small">View</MudButton>
                            }
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <MudItem xs="12" md="6">
                <MudCard Outlined="true" Style="cursor: pointer;" @onclick="@(() => OnViewMessages.InvokeAsync("DeadLetter"))">
                    <MudCardContent>
                        <div class="d-flex align-center justify-space-between">
                            <div>
                                <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Error" Size="Size.Large" />
                                <MudText Typo="Typo.subtitle2" Class="mt-2">Dead Letter Messages</MudText>
                                <MudText Typo="Typo.h4">@SubscriptionInfo.DeadLetterMessageCount</MudText>
                            </div>
                            @if (SubscriptionInfo.DeadLetterMessageCount > 0)
                            {
                                <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small">View</MudButton>
                            }
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    }
    else
    {
        <div class="text-center pa-8">
            <MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Large" Class="mb-4" />
            <MudText Typo="Typo.h5" Class="mb-2">Select an entity from the tree</MudText>
            <MudText Typo="Typo.body1">Choose a queue, topic, or subscription to view its details and messages.</MudText>
        </div>
    }
</MudPaper>

@code {
    [Parameter]
    public string? EntityType { get; set; }

    [Parameter]
    public EntityInfo? QueueInfo { get; set; }

    [Parameter]
    public EntityInfo? TopicInfo { get; set; }

    [Parameter]
    public SubscriptionInfo? SubscriptionInfo { get; set; }

    [Parameter]
    public string? TopicName { get; set; }

    [Parameter]
    public EventCallback<string> OnViewMessages { get; set; }

    [Parameter]
    public EventCallback OnToggleStatus { get; set; }
}
