@using System.Reflection
@using SBInspector.Shared.Presentation.Components.Layout
@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(Program).Assembly" AdditionalAssemblies="@additionalAssemblies">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>

@code {
    private Assembly[] additionalAssemblies = new[]
    {
        typeof(SBInspector.Shared.Presentation.Components.Pages.Templates).Assembly
    };
}
